<div class="posts-wrapper row">

  <div class="post">
    <div class="post-head">
    </div>
      <div class="name">
        Ben Walker
      </div>

      <div class="image center-block">
        <%= image_tag @post.image.url(:medium) %>
      </div>

      <div class="p caption">
        <%= @post.caption %>
      </div>
  </div>
<%= link_to "Cancel", posts_path %> | <%= link_to "Edit post", edit_post_path(@post) %> | <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "'You sure about that?" } %>
</div>
