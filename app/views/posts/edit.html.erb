<h1>Edit Post</h1>

<%= form_with model: @post, local: true do |form| %>

    <% if @post.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
            </h2>
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %> </li>
              <% end %>
            </ul>
        </div>
    <% end %>

<% end %>

<div class="form-wrapper">
  <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |form| %>
  <div class="form-group">
    <%= form.input :image %>
  </div>

  <div class="image center-block">
    <%= image_tag @post.image.url(:medium) %>
  </div>

    <div class="form-group text-center">
        <%= form.input :caption %>
    </div>

    <div class="form-group text-center">
        <%= form.button :submit, class: 'btn-success' %>
    </div>

  <% end %>
</div>
<div class="text-center edit-links" >
  <%= link_to "Cancel", post_path(@post) %> | <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "'You sure about that?" } %>
</div>
