<h1>Edit Post</h1>

<div class="form-wrapper image center-block">
  <%= image_tag @post.image.url(:medium) %>
</div>

<%= render 'form' %>

<div class="text-center edit-links" >
  <%=link_to "Cancel", post_path(@post) %> | <%=link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "You sure about that?" } %>
</div>
